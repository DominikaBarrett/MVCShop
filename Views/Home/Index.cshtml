@model HomeViewModel
 
<partial name="_Carusel"/>

<h2>Best Sellers</h2>
<div class="row">
    @foreach (var product in Model.ProductOnSale)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@product.ImgThumbnailUrl"alt="i" />
                <div class="caption">
                    <h3 class="pull-right">@product.Price.ToString("c")</h3>
                    <h3><a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">@product.Name</a></h3>
                    <p>@product.Description</p>
                </div>
               
            </div>
        </div>

    }
</div>




